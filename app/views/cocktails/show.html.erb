<p id="notice"><%= notice %></p>

<h3>COCKTAIL</h3>
<br>
<p>
  <strong>Name:</strong>
  <%= @cocktail.name %>
</p>
<br>
<h5>Ingredients:</h5>
<ul >
  <% @cocktail.doses.each do |dose| %>
    <li> <%=  dose.ingredient.name  %> (<%= dose.description %>)</li>
  <% end %>
</ul>

<%= link_to 'Back', cocktails_path, class: "btn btn-primary" %>
<%= link_to 'Add a Ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
	
